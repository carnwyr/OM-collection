extends layout

block content
  div.container
    h2.text-primary #{card.name}
    hr.pb-2
    div.row
      //- Mobile/ Tablet Screen
      if user
        div(class="d-flex justify-content-center col-md-6 d-lg-none" style="margin-bottom:10px;")
            button.btn.btn-primary(id="alterCollection" type="button" data-toggle="button" autocomplete="off" aria-pressed="false") Add to collection

      div(class="d-block d-lg-none col-12 col-md-7")
        div(class="card text-center")
          div.card-header
            ul(class="nav nav-pills card-header-pills nav-justified")
              li.nav-item
                a(class="nav-link active" id="original-card-tab" data-toggle="tab" href="#Original" role="tab" aria-controls="original" aria-selected="true") Original
              li.nav-item
                a(class="nav-link" id="bloomed-card-tab" data-toggle="tab" href="#Bloomed" role="tab" aria-controls="bloomed" aria-selected="false") Bloomed
          div.card-body.tab-content(id="cardToggle")
            div(class="tab-pane fade show active" id="originalCard" role="tabpanel" aria-labelledby="original-card-tab")
              img.card-img(src="/images/cards/L/" + card.uniqueName + ".png")
            div(class="tab-pane fade" id="bloomedCard" role="tabpanel" aria-labelledby="bloomed-card-tab")
              img.card-img(src="/images/cards/L/" + card.uniqueName + ".png")
      //- Desktop Screen
      div(class="d-none d-lg-block col-4")
        div.card.bg-transparent
          div.card-body
            img.card-img(src="/images/cards/L/" + card.uniqueName + ".png")
      div(class="d-none d-lg-block col-4")
        div.card.bg-transparent
          div.card-body
            img.card-img(src="/images/cards/L/" + card.uniqueName + ".png")
      //- Info
      div(class="col-12 col-md-5 col-lg-4")
        div.card
          div.card-body
            p #[strong Type:] #{card.type} card
            p #[strong Rarity:] #{card.rarity}
            p #[strong Attribute:] #{card.attribute}
            p #[strong Characters: ]
               each val, index in card.characters
                |#{val}
                if index < card.characters.length - 1
                  |,&nbsp;
        if user
          div(style="margin:10px 0;")
              button.btn.btn-primary(id="alterCollection" type="button" data-toggle="button" autocomplete="off" aria-pressed="false") Add to collection


