extends layout

block scripts
  link(rel="stylesheet" href="/stylesheets/eventList.css")

block content
  div.container
    h1= title
    div.card.card-body.p-5.text-center
      h5 Karasu-OS.com needs help! 
      p.my-4 Please help us complete events data by adding to our database. 
      a.h5(href="https://drive.google.com/drive/folders/1lpIwYjeZLMaHr-7wTMuAdOYMn8lFQZct?usp=sharing" target="_blank") Click here access database.

    
    if user && user.type === "Admin"
      -
        function getFormatedDate(d) {
          var day = d.getDate(), year = d.getFullYear();
          if (t("lang") === "en") {
            var month = d.toLocaleString('en', { month: 'long' });
            return `${day} ${month} ${year}`;
          } else {
            var month = d.getMonth();
            return `${year}年${month}月${day}日`;
          }
        }
      .row#gallery
        each event in events
          .col-12.col-sm-6.col-lg-4.mb-3
            div.card.shadow
              img.card-img-top(src="/images/events/" + event.name.en + ".jpg")
              div.card-body
                a.stretched-link(href="event/" + encodeURIComponent(event.name.en.replace(/ /g, '_')) + "/edit")
                  p.card-title= event.name.en
                //- small.text-muted= getFormatedDate(event.start) + " - " + getFormatedDate(event.end)
    
